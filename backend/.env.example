# Firebase Configuration
FIREBASE_DATABASE_URL=https://your-firebase-app.firebaseio.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT_FILE=classpath:your-firebase-service-account.json
FIREBASE_API_KEY=your-firebase-api-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=86400000

# OpenAI Configuration
# Default OpenAI settings (fallback)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# General Legal Information mode (A) settings - using GPT-3.5 Turbo
OPENAI_GLI_API_KEY=your-gli-mode-api-key
OPENAI_GLI_MODEL=gpt-3.5-turbo
OPENAI_GLI_TEMPERATURE=0.3
OPENAI_GLI_TOP_P=1.0
OPENAI_GLI_FREQUENCY_PENALTY=0.0
OPENAI_GLI_PRESENCE_PENALTY=0.0
OPENAI_GLI_MAX_TOKENS=600
OPENAI_GLI_STREAM=true

# Case Plausibility Assessment mode (B) settings - using GPT-4o
OPENAI_CPA_API_KEY=your-cpa-mode-api-key
OPENAI_CPA_MODEL=gpt-4o
OPENAI_CPA_TEMPERATURE=0.2
OPENAI_CPA_TOP_P=1.0
OPENAI_CPA_FREQUENCY_PENALTY=0.0
OPENAI_CPA_PRESENCE_PENALTY=0.0
OPENAI_CPA_MAX_TOKENS=2000
OPENAI_CPA_STREAM=false
